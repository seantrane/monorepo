{
  "name": "@seantrane/monorepo",
  "description": "A monorepo starter kit",
  "version": "0.0.0-development",
  "author": "@seantrane",
  "license": "ISC",
  "homepage": "https://github.com/seantrane/monorepo#readme",
  "repository": "github:seantrane/monorepo",
  "bugs": "https://github.com/seantrane/monorepo/issues",
  "directories": {
    "lib": "packages",
    "output": "coverage"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "build:packages": "lerna run build",
    "build": "npm run build:packages",
    "clean:packages": "lerna run clean",
    "clean": "npm run clean:packages && shx rm -Rf $npm_package_directories_output .nyc_output",
    "coverage": "istanbul cover node_modules/mocha/bin/_mocha -- --opts mocha.opts",
    "docs": "typedoc --options typedoc.json --exclude '**/*.test.ts' ./$npm_package_directories_lib/",
    "git:commit": "git-cz",
    "istanbul": "istanbul",
    "lerna": "lerna",
    "lint:md": "markdownlint -i 'node_modules/' -c '.markdownlint.yaml' './'",
    "lint:packages": "lerna run lint",
    "lint:sh": "docker pull koalaman/shellcheck:stable && docker run -v \"$PWD:/mnt\" koalaman/shellcheck ./$npm_package_directories_lib/**/*.sh && docker kill koalaman/shellcheck 2> /dev/null; docker rm -f koalaman/shellcheck 2> /dev/null; docker rmi -f koalaman/shellcheck:stable 2> /dev/null",
    "lint:styles": "sass-lint -v -q",
    "lint:ts:report": "tslint -t json -o $npm_package_directories_output/unit-report.json $npm_package_directories_lib/**/*.ts",
    "lint:ts": "tslint $npm_package_directories_lib/**/*.ts",
    "lint": "npm run lint:md && npm run lint:styles && npm run lint:sh && npm run lint:packages",
    "list": "lerna list",
    "markdownlint": "markdownlint",
    "postinstall": "npm run bootstrap",
    "sass-lint": "sass-lint",
    "semantic-release": "lerna exec --concurrency 1 \"npx --no-install semantic-release -e semantic-release-monorepo\"",
    "test:mocha": "nyc mocha --opts mocha.opts $npm_package_directories_lib/**/*.test.ts",
    "test:packages": "lerna run test",
    "test": "npm run test:packages",
    "typedoc": "typedoc",
    "uninstall:packages": "shx rm -Rf $npm_package_directories_lib/*/node_modules",
    "uninstall": "npm run clean && npm run uninstall:packages && shx rm -Rf node_modules"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@commitlint/travis-cli": "^7.2.1",
    "@seantrane/nyc-config-typescript": "^1.0.0",
    "@semantic-release/changelog": "^3.0.1",
    "@semantic-release/commit-analyzer": "^6.1.0",
    "@semantic-release/exec": "^3.3.0",
    "@semantic-release/git": "^7.0.5",
    "@semantic-release/github": "^5.2.1",
    "@semantic-release/npm": "^5.0.6",
    "@semantic-release/release-notes-generator": "^7.1.4",
    "@types/chai": "^4.1.4",
    "@types/chai-as-promised": "^7.1.0",
    "@types/lodash": "^4.14.117",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.5.7",
    "@types/sinon": "^5.0.5",
    "@types/sinon-chai": "^3.2.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "commitizen": "^3.0.4",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.1.3",
    "istanbul": "^0.4.5",
    "lerna": "^3.4.3",
    "markdownlint-cli": "^0.13.0",
    "mocha": "^5.2.0",
    "nyc": "^13.0.1",
    "sass-lint": "^1.12.1",
    "semantic-release": "^15.10.8",
    "semantic-release-monorepo": "^6.1.1",
    "shx": "^0.3.2",
    "sinon": "^6.3.5",
    "sinon-chai": "^3.2.0",
    "ts-node": "~7.0.0",
    "tslint": "^5.11.0",
    "typedoc": "^0.13.0",
    "typescript": "^3.1.6"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        0,
        "always",
        80
      ]
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "nyc": {
    "extends": "@seantrane/nyc-config-typescript"
  }
}
