{
  "name": "@seantrane/monorepo",
  "description": "A monorepo starter kit",
  "version": "0.0.0-development",
  "author": "@seantrane",
  "license": "MIT",
  "homepage": "https://github.com/seantrane/monorepo#readme",
  "repository": "github:seantrane/monorepo",
  "bugs": "https://github.com/seantrane/monorepo/issues",
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "git:commit": "git-cz",
    "lerna": "lerna",
    "lint:md": "markdownlint -i 'node_modules/' -c '.markdownlint.yaml' './'",
    "lint:packages": "lerna run lint",
    "lint:sh": "docker pull koalaman/shellcheck:stable && docker run -v \"$PWD:/mnt\" koalaman/shellcheck ./packages/**/*.sh && docker kill koalaman/shellcheck 2> /dev/null; docker rm -f koalaman/shellcheck 2> /dev/null; docker rmi -f koalaman/shellcheck:stable 2> /dev/null",
    "lint:styles": "sass-lint -v -q",
    "lint": "npm run lint:md && npm run lint:styles && npm run lint:sh && npm run lint:packages",
    "markdownlint": "markdownlint",
    "sass-lint": "sass-lint",
    "semantic-release": "lerna exec --concurrency 1 -- semantic-release -e semantic-release-monorepo",
    "test:packages": "lerna run test",
    "test": "npm run test:packages"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@commitlint/travis-cli": "^7.2.1",
    "@semantic-release/changelog": "^3.0.1",
    "@semantic-release/commit-analyzer": "^6.1.0",
    "@semantic-release/exec": "^3.3.0",
    "@semantic-release/git": "^7.0.5",
    "@semantic-release/github": "^5.2.1",
    "@semantic-release/npm": "^5.0.6",
    "@semantic-release/release-notes-generator": "^7.1.4",
    "commitizen": "^3.0.4",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.1.3",
    "lerna": "^3.4.3",
    "markdownlint-cli": "^0.13.0",
    "sass-lint": "^1.12.1",
    "semantic-release": "^15.10.8",
    "semantic-release-monorepo": "^6.1.1",
    "shx": "^0.3.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        0,
        "always",
        80
      ]
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
